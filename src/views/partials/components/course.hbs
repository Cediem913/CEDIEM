<div>
    {{#each course}}
    <div class="row">
        <div class="col-md-6 align-self-center ">
            <div class="card">
                <div class="card-body">
                    <img class="rounded mx-auto d-block w-100 img-responsive"
                        src="https://res.cloudinary.com/dinzw8gc3/image/upload/v1564937147/CEDIEM/Website/roots/{{id_root}}/{{Image}}"
                        alt="{{id_course}}">
                </div>
            </div>
        </div>
        <div class="col-md-6">

            <div class="card">
                <div class="card-header">
                    <p class="newarrival text-center">{{id_course}}</p>
                    <p class="price">MXN ${{Price}}</p>
                </div>
                <div class="card-body">
                    <p>{{Description}}</p>
                    <p><b>Fecha inicio: </b>{{StartDate}}</p>
                    <p><b>Fecha término: </b>{{EndDate}}</p>
                    <p><b>Modalidad: </b>{{Modal}}</p>
                    <p><b>Duración: </b>{{Duration}}</p>
                    <p><b>Horario: </b>{{Schedule}}</p>
                    <p class=""><b>Se entrega: {{Documents}}</b></p>
                </div>
                <div class="card-footer">
                    <!--<label>Número de personas: </label>
                    <input type="text" value="1">-->
                    {{#if ...user.id_user}}
                    <form
                        action="/aceptarPago?id_user={{...user.id_user}}&product={{id_course}}&price={{Price}}&startDate={{StartDate}}&endDate={{EndDate}}&map={{Map}}"
                        method="POST">
                        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                            data-key="pk_test_gaby5qpjEypGf8MJnH20RSQD00z5Ec16AQ" data-amount="{{Price}}"
                            data-email="a@a.c" data-currency="mxn" data-name="CEDIEM - {{id_course}}"
                            data-description="Compra protegida por stripe"
                            data-image="https://res.cloudinary.com/dinzw8gc3/image/upload/v1565068700/CEDIEM/Website/Structure/icon_cwxeqe.png"
                            data-locale="auto">
                            </script>
                        <script>
                            document.getElementsByClassName('stripe-button-el')[0].style.display = 'none';
                        </script>
                        <button id="botonPagoStripe" class="btn btn-default cart">
                            comprar<i></i>
                        </button>
                    </form>
                    {{else}}
                    <a class="btn btn-default cart" href="/acceso"> comprar<i></i></a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{#if Syllabus}}
            <div class="card">
                <div class="card-header">
                    <p>Temario:</p>
                </div>
                <div class="card-body">
                    <iframe
                        src="https://res.cloudinary.com/dinzw8gc3/image/upload/v1564937147/CEDIEM/Website/roots/{{id_root}}/{{Syllabus}}"
                        width="100%" height="512"></iframe>
                </div>
            </div>
            {{/if}}
            {{#if Benefits}}
            <div class="card">
                <div class="card-header">
                    <p>Beneficios:</p>
                </div>
                <div class="card-body">
                    <p>{{Benefits}}</p>
                </div>
            </div>
            {{/if}}
        </div>
        <div class="col-md-6 align-self-center">
            {{#if Video}}
            <div class="card">
                <div class="card-header">
                    <p>Demostración:</p>
                </div>
                <div class="card-body">
                    <iframe width="560" height="315" src="{{Video}}" frameborder="0"
                        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                    </iframe>
                </div>
            </div>
            {{/if}}
        </div>
        <div class="col-md-6 align-self-center">
            {{#if Map}}
            <div class="card">
                <div class="card-header">
                    <p>Mapa:</p>
                </div>
                <div class="card-body">
                    <div id="map"></div>
                    <script>
                        // Initialize and add the map
                        function initMap() {
                            // The location of Uluru
                            var uluru = { {{Map}} };                
                            // The map, centered at Uluru
                            var map = new google.maps.Map(
                                document.getElementById('map'), { zoom: 5, center: uluru });
                            // The marker, positioned at Uluru
                            var marker = new google.maps.Marker({ position: uluru, map: map });
                        }
                    </script>
                    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBDaeWicvigtP9xPv919E-RNoxfvC-Hqik&callback=initMap">
                    </script>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
    {{/each}}
</div>