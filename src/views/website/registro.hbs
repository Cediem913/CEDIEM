<div class="container">
    <div class="row">
        <div class="col-md-8 col-sm-12 mt-4 mx-auto">
            <div class="card mt-4t ext-center">
                <div class="card-header">
                    <h1>
                        Registro
                    </h1>
                </div>

                <img src="https://res.cloudinary.com/dinzw8gc3/image/upload/v1570329420/CEDIEM/Website/Structure/000_yqoyqb.png" class="img-fluid mx-auto d-block m-4" alt="Imagen">

                <div class="card-body">
                    <form action="/registro" method="POST">
                        <div class="form-group">
                            <input id="formUser" type="user" class="fomr-control" name="user" placeholder="Usuario" autofocus
                                value="{{user}}"> <p id="validatorUser" class="alert-cediem"></p>
                        </div>
                        <div class="form-group">
                            <input id='formEmail' type="email" class="fomr-control" name="email" placeholder="Correo"
                                value="{{email}}"> <p id="validatorEmail" class="alert-cediem"></p>
                        </div>
                        <div class="form-group">
                            <input id="formConfirmEmail" type="email" class="fomr-control" name="confirmEmail" placeholder="Confirmar correo"
                                value="{{confirmEmail}}"> <p id="validatorConfirmEmail" class="alert-cediem"></p>
                        </div>
                        <div class="form-group">
                            <input id="formPassword" type="password" class="fomr-control" name="password" placeholder="contraseña"
                                value="{{password}}"> <p id="validatorPassword" class="alert-cediem"></p>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-dark">Registrarme</button>
                        </div>
                    </form>
                    <a href="/acceso">ya tengo una cuenta</a>
                </div>
            </div>
        </div>

        <script>
            $(document).ready(function () {
                $("#formUser").focusout(function () {
                    $.ajax({
                        type:"POST", 
                        url: "/validarUsuario/" + document.getElementById("formUser").value
                    })
                        .done(function (data) {
                            if(data !=="1"){
                                $('#validatorUser').text(data);
                            }else{
                                $('#validatorUser').text("");
                            }
                        });
                });
            });

            $(document).ready(function () {
                $("#formEmail").focusout(function () {
                    $.ajax({
                        type:"POST", 
                        url: "/validarCorreo/" + document.getElementById("formEmail").value
                    })
                        .done(function (data) {
                            if(data !=="1"){
                                $('#validatorEmail').text(data);
                            }else{
                                $('#validatorEmail').text("");
                            }
                        });
                });
            });

            $(document).ready(function () {
                $("#formConfirmEmail").focusout(function () {
                    if($('#formEmail').val() !== $('#formConfirmEmail').val()){
                        $('#validatorConfirmEmail').text("No coinciden los correos");
                    }else{
                        $('#validatorConfirmEmail').text("");
                    }
                });
            });

            $(document).ready(function () {
                $("#formPassword").focusout(function () {
                    if($('#formPassword').val().length < 5){
                        $('#validatorPassword').text("La contraseña no puede ser menor a 5 caracteres");
                    }else{
                        $('#validatorPassword').text("");
                    }
                });
            });
        </script>
    </div>
</div>
